# vercheck-pkgbuild: auto
# vercheck-ubuntu: name=${pkgname}, repo=zesty

pkgname=appmenu-qt5
_actual_ver=0.3.0
_extra_ver=+17.04.20161124.2
pkgver=${_actual_ver}${_extra_ver/\+/.}
pkgrel=1
pkgdesc="Adds support for application menus to Qt5"
arch=(i686 x86_64)
url="https://launchpad.net/appmenu-qt5"
license=(LGPL)
groups=(unity)
depends=(libdbusmenu-qt5 qt5-x11extras)
source=("https://launchpad.net/ubuntu/+archive/primary/+files/${pkgname}_${_actual_ver}${_extra_ver}.orig.tar.gz")
sha512sums=('d076917d82175c735e10ee3e551bbb132bc1c7150c0506560a86a39de432b68408102dfe6ed894afcc0a5e546920036f5985c41cef932a00f3b00e71655bb94f')

build() {
    qmake-qt5 CONFIG+=enable-by-default
}

package() {
    make INSTALL_ROOT="${pkgdir}" install
}
